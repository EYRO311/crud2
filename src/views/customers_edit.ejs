<%- include ('partials/_header.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="Name" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="username" value="<%= data.username%>" placeholder="Address" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="numero" value="<%= data.numero%>" placeholder="Phone" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Edit User
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer.ejs') %>
