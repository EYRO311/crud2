<%- include ('partials/_header.ejs') %>

<div class = "container">
    <div class="row mt-5">
        <div class="col-md-5">
            <h3>Ingresa Usuario</h3>    
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                          <input type="text" name="nombre" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                          <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                          <input type="text" name="numero" placeholder="Phone" class="form-control">
                        </div>
              
                        <button type="submit" class="btn btn-primary">
                          Save User
                        </button>
                      </form>
                </div>
            </div>
        </div>
        <div class="col-md-5 ">
            <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <td>n°</td>
                    <td>Name</td>
                    <td>Username</td> 
                    <td>Phone</td>
                    <td>Actions</td>
                  </tr>
                </thead>
                <tbody>
                  <% if (data) { %>
                    <% for(var i = 0; i < data.length; i++) { %>
                      <tr>
                        <td><%= (i + 1) %></td>
                        <td><%= data[i].nombre %></td>
                        <td><%= data[i].username %></td>
                        <td><%= data[i].numero %></td>
                        <td>
                          <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                          <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                        </td>
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
        
    </div>
</div>
